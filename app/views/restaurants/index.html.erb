<h1>All Restaurants</h1>

<div class="container-sm m-3">
  <ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item"> <%= link_to restaurant.name ,restaurant_path(restaurant) %> </li>
  <% end %>
</ul>
</div>


<%= link_to "Add a restaurant", new_restaurant_path, class:"btn btn-primary"%>
